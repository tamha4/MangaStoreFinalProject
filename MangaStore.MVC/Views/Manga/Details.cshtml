@model MangaStore.Model.MangaModel.MangaDetail

@{
    ViewData["Title"] = "Manga Detail";
}

<style>
    .manga-details-img {
        width: 100%;
        height: auto;
    }

    .back-to-list {
        margin-top: 20px;
        display: block;
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s;
    }

    .back-to-list:hover {
        color: #0056b3;
    }
</style>

<h2>Manga Details</h2>

<div class="row">
    <div class="col-md-6">
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageFile)" alt="Image" class="manga-details-img" />
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                <p class="card-text"><strong>Items in Stock:</strong> @Model.ItemsInStock</p>
                <p class="card-text"><strong>Genre:</strong> @Model.GenreTypeName</p>
            </div>
        </div>
    </div>
</div>

<div class="back-to-list">
    @Html.ActionLink("Back to List", "Index")
</div>
