@model IEnumerable<MangaStore.Model.MangaModel.MangaListItem>

@{
    ViewData["Title"] = "Manga Index";
}

<h1>Manga Index</h1>
<p>
    <a asp-action="Create">Create A Manga </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @* <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)" alt="Image" class="card-img-top" /> *@
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>Author:</strong> @item.Author</p>
                    <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                    <p class="card-text"><strong>Items in Stock:</strong> @item.ItemsInStock</p>
                    <p class="card-text"><strong>Genre:</strong> @item.GenreTypeName</p>
                    <p class="card-text"><strong>Image:</strong> @item.ImageId</p>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
