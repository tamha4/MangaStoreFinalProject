@model MangaStore.Model.MangaModel.MangaDetail

@{
    ViewData["Title"] = "Delete Manga";
}

<h2>Delete Manga</h2>

<div class="card">
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageFile)" alt="Image" class="card-img-top" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Author:</strong> @Model.Author</p>
        <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
        <p class="card-text"><strong>Items in Stock:</strong> @Model.ItemsInStock</p>
        <p class="card-text"><strong>Genre:</strong> @Model.GenreTypeName</p>
    </div>
</div>

<div class="mt-3">
    <h3>Are you sure you want to delete this manga?</h3>

    <form asp-action="Delete" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
