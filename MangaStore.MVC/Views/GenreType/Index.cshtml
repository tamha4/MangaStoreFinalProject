@model IEnumerable<MangaStore.Model.GenreTypeModel.GenreTypeListItem>

@{
    ViewData["Title"] = "GenreType Index";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f8f8f8;
        color: #333;
    }

    tr {
        transition: background-color 0.3s;
    }

    tr:hover {
        background-color: #f0f0f0;
    }

    .action-links {
        display: flex;
    }

    .action-links a {
        margin-right: 10px;
        color: #fff;
        text-decoration: none;
        padding: 8px 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #5cb85c; /* Green */
        transition: background-color 0.3s;
    }

    .action-links a:hover {
        background-color: #4cae4c; /* Darker green on hover */
    }

    .create-link {
        display: inline-block;
        padding: 10px 15px;
        color: #fff;
        text-decoration: none;
        background-color: #428bca; /* Blue */
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .create-link:hover {
        background-color: #3071a9; /* Darker blue on hover */
    }
</style>

<h1>GenreType Index</h1>
<p>
    <a asp-action="Create" class="create-link">Create A GenreType</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td class="action-links">
                @Html.ActionLink("Edit", "Edit", "GenreType", new {id = item.Id}, new {@class = "btn btn-primary"}) |
                @Html.ActionLink("Details", "Details", "GenreType", new {id = item.Id}, new {@class = "btn btn-info"}) |
                @Html.ActionLink("Delete", "Delete", "GenreType", new {id = item.Id}, new {@class = "btn btn-danger"})
            </td>
        </tr>
    }
</table>
