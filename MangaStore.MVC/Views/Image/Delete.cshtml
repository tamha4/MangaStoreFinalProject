@model MangaStore.Model.ImageModel.ImageDetail

@{
    ViewData["Title"] = "Delete Image";
}

<h2>Delete Image</h2>

<div class="card">
    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageData)" alt="Image" class="card-img-top" />
    <div class="card-body">
        <p class="card-text"><strong>Id:</strong> @Model.Id</p>
        <form asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>


