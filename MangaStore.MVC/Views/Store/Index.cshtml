@model IEnumerable<MangaStore.Model.StoreModel.StoreListItem>

@{
    ViewData["Title"] = "Store Index";
}

<style>
    body 
    {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    h1 {
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f8f8f8;
        color: #333;
    }

    tr {
        transition: background-color 0.3s;
    }

    tr:hover {
        background-color: #f0f0f0;
    }

    .action-links {
        display: flex;
    }

    .action-links a {
        margin-right: 10px;
        color: #fff;
        text-decoration: none;
        padding: 8px 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: MediumSeaGreen; 
        transition: background-color 0.3s;
    }

    .action-links a:hover {
        background-color: SeaGreen;
    }

    .create-link {
        display: inline-block;
        padding: 10px 15px;
        color: #fff;
        text-decoration: none;
        background-color: DodgerBlue;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .create-link:hover {
        background-color: RoyalBlue; 
    }
    .manga-link {
        text-decoration: none;
        color: black; 
        cursor: pointer;
    }

</style>

<h1>Store Index</h1>
<p>
    <a asp-action="Create" class="create-link">Create A Store</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MangaName)
        </th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Manga" asp-route-mangaId="@item.MangaId" class="manga-link">
                    @Html.DisplayFor(modelItem => item.MangaName)
                </a>
            </td>
            <td class="action-links">
                <a asp-action="Edit" asp-controller="Store" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-controller="Store" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-controller="Store" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
