@model MangaStore.Model.StoreModel.StoreEdit

@{
    ViewData["Title"] = "Edit A Store";
}

<h1>Edit a Store</h1>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="MangaId" class="control-label"></label>
                <input asp-for="MangaId" class="form-control" />
                <span asp-validation-for="MangaId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
        </div>
    </div>
</form>
<div class="back-link">
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body 
    {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }
    .back-link 
    {
        display: inline-block;
        padding: 10px 15px;
        color: #2a2525;
        text-decoration: none;
        background-color: rgb(200, 203, 211);
        border-radius: 4px;
        transition: background-color 0.3s;        
    }

    .back-link:hover 
    {
        text-decoration: none;
        background-color: black;
    }
</style>